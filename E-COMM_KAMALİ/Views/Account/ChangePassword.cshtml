@model ECOMM.Core.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Şifre Değiştir";
}

<h2>Şifre Değiştir</h2>

<form asp-action="ChangePassword" method="post">
    <div class="form-group">
        <label for="Email">E-posta Adresi</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model?.Email" readonly required />
    </div>
    <div class="form-group">
        <label for="NewPassword">Yeni Şifre</label>
        <input type="password" class="form-control" id="NewPassword" name="NewPassword" required />
    </div>
    <div class="form-group">
        <label for="ConfirmNewPassword">Yeni Şifreyi Onayla</label>
        <input type="password" class="form-control" id="ConfirmNewPassword" name="ConfirmNewPassword" required />
    </div>
    <button type="submit" class="btn btn-primary">Şifreyi Değiştir</button>
</form>
