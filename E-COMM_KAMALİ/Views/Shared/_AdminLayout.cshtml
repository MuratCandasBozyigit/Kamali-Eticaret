<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Blog.Web</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AdminPage/adminLayout.css" />

    @await RenderSectionAsync("Css", required: false)

    <style>
        /* Genel Gövde Yapısı */
        body {
            padding-top: 35px;
            margin: 0;
            display: flex;
            overflow-x: hidden;
            transition: background-color 0.6s ease;
        }

        /* Koyu mod arka plan rengi */
        .night-mode {
            background-color: #2b2b2b;
            color: #f5f5f5;
        }

            /* Tablo koyu mod için */
            .night-mode .table {
                background-color: #343a40;
                color: #ffffff;
            }

                .night-mode .table th,
                .night-mode .table td {
                    border-color: #474747;
                }

            .night-mode .table-hover tbody tr:hover {
                background-color: #444444;
            }

            /* Gece modu için modal ve kart renkleri */
            .night-mode .modal-content,
            .night-mode .card {
                background-color: #3a3a3a;
                color: #f5f5f5;
            }

            .night-mode .modal-header {
                background-color: #1f1f1f;
            }

        /* Sidebar */
        #sidebar {
            width: 250px;
            background: #343a40;
            color: #fff;
            transition: margin 0.3s;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
        }

            #sidebar .sidebar-header {
                padding: 15px;
                background: #343a40;
                font-size: 1.25em;
            }

            #sidebar ul.components {
                padding: 0;
                margin: 0;
                list-style-type: none;
            }

            #sidebar ul li a {
                display: block;
                padding: 12px 20px;
                color: #fff;
                text-decoration: none;
                font-size: 1em;
                background: transparent;
                transition: background 0.3s, color 0.3s;
            }

                #sidebar ul li a:hover {
                    color: #343a40;
                    background: #fff;
                }

        /* İçerik Alanı */
        #content {
            margin-left: 250px;
            width: calc(100% - 250px);
            padding: 20px;
            transition: margin 0.3s, width 0.3s;
        }

        /* Gece modu butonu */
        #nightmode {
            padding: 15px;
            border: 2px solid rgb(12, 42, 52);
            border-radius: 60px;
            position: fixed;
            top: 20px;
            right: 20px;
            transition: background-color 0.6s ease;
        }

            #nightmode:hover {
                background-color: coral;
                cursor: pointer;
            }

        /* Sidebar Aç/Kapat Düğmesi */
        #sidebarCollapse {
            background: #343a40;
            color: #fff;
            border: none;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div id="sidebar">
        <div class="sidebar-header">
            <h3>Admin Blog.Web</h3>
            <button type="button" id="sidebarCollapse" class="btn btn-sm">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        <ul class="list-unstyled components">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
            <br />
           <br />
            <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Grafikler</a></li>
            <li><a asp-area="Admin" asp-controller="Product" asp-action="Index">Ürünler</a></li>
            <li><a asp-area="Admin" asp-controller="Category" asp-action="Index">Kategoriler</a></li>
            <li><a asp-area="Admin" asp-controller="Category" asp-action="SubCategoryIndex">Alt Kategoriler</a></li>
            <li><a asp-area="Admin" asp-controller="UserList" asp-action="Index">Kullanıcı Listesi</a></li>
            <li><a asp-area="Admin" asp-controller="UserList" asp-action="Index">Sipariş Listesi</a></li>
            <li><a asp-area="Admin" asp-controller="UserList" asp-action="CreateRole">Roller</a></li>
        </ul>
    </div>

    <!-- İçerik -->
    <div id="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <button id="nightmode"><i class="fa-solid fa-moon"></i></button>
    </div>
    <!-- jQuery ve Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables ve diğer JS dosyaları -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Gece Modu Toggle Script -->
    <script>
        $(document).ready(function () {
            // Sayfa yüklendiğinde, localStorage'dan gece modu durumunu kontrol et
            if (localStorage.getItem('nightMode') === 'enabled') {
                $('body').addClass('night-mode');
            }

            $('#nightmode').on('click', function () {
                $('body').toggleClass('night-mode');

                // Gece modu durumunu localStorage'a kaydet
                if ($('body').hasClass('night-mode')) {
                    localStorage.setItem('nightMode', 'enabled');
                } else {
                    localStorage.setItem('nightMode', 'disabled');
                }
            });

            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
        });
    </script>
</body>
</html>
