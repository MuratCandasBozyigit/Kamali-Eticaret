@model IEnumerable<ECOMM.Core.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="row justify-content-start align-items-center">
        <!-- Burayı değiştirdik -->
        <!-- Sol Yön Okları -->
        <div class="col-auto" style="margin-right: 70px;">
            <a class="btn btn-light @(ViewBag.CurrentPage == 1 ? "disabled" : "btn-hover")" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </div>

        <div class="col">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="custom-col">
                        <div class="card mb-2 product-card">
                            <img src="@product.ImagePath" class="card-img-top product-image" alt="Product Image" />
                            <div class="card-body">
                                <h5 class="card-title">@product.ProductName</h5>
                                <p class="card-text">@product.ProductPrice.ToString("C")</p>
                                <a href="#" class="btn btn-primary">Detaylar</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Sağ Yön Okları -->
        <div class="col-auto" style="margin-left: 20px;">
            <a class="btn btn-light @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "btn-hover")" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </div>
    </div>
</div>

<style>
    .custom-col {
        flex: 0 0 19%; /* Her kartın genişliği toplam satırın %19'u olacak şekilde */
        max-width: 19%; /* Maksimum genişliği de %19 */
        margin-bottom: 0.5rem; /* Kartlar arasında dikey boşluk */
    }

    .product-card {
        width: 100%; /* Kartın sütun boyutuna uyumlu olmasını sağlar */
        height: 350px; /* Kartın sabit yüksekliği */
    }

    .product-image {
        width: 100%; /* Kartın genişliğine uyum sağlar */
        height: 200px; /* Sabit resim yüksekliği */
        object-fit: cover; /* Resmi kutuya sığacak şekilde kırpar veya genişletir */
        object-position: center; /* Resmin ortalanmasını sağlar */
    }

    /* Buton tasarımı */
    .btn-light {
        background-color: lightgray; /* Açık gri arka plan */
        color: black; /* Yazı rengi */
        border: none; /* Kenar çizgisi yok */
    }

    .btn-hover {
        background-color: gray; /* Hover durumunda daha koyu gri */
        color: white; /* Hover durumunda yazı rengi beyaz */
    }

    /* Butonlar arasında biraz boşluk bırakmak için */
    .col-auto {
        display: flex;
        align-items: center;
    }
</style>
