@model IEnumerable<ECOMM.Core.ViewModels.ProductViewModel>;

@{
    ViewData["Title"] = "Tüm Ürünler";
}

<h1 class="mt-4 mb-3" style="justify-content:center;text-align:center;font-weight:bold;text-shadow: 1px 1px 1px black;">
    Tüm Ürünler
</h1>

<div class="container">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var product in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text text-muted">@product.CategoryName</p>
                            <p class="card-text"><strong>Fiyat:</strong> @product.Price.ToString("C")</p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="/Products/Details/@product.ProductId" class="btn btn-primary w-100">Detaylar</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Gösterilecek ürün bulunamadı.</p>
        }
    </div>
</div>
