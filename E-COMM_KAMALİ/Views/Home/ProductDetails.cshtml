@model ECOMM.Core.Models.Product
@{
    ViewData["Title"] = "Product Details";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;800&display=swap">
<link rel="stylesheet" href="/css/Mağaza/ProductDetailPage.css">

<!-- Container Start -->
<div class="container">
    <div class="card-wrapper">
        <div class="card">
            <div class="card-wrapper">
                <div class="card">
                    <div class="product-imgs">
                        @*      <div class="img-display">
                        <div class="img-showcase">
                        <img src="@Model.ImagePath" alt="Product image" />
                        </div>
                        </div> *@
                        <div class="img-select">
                            <div class="img-item">
                                <a href="#" data-id="1">
                                    <img src="@Model.ImagePath" alt="Product thumbnail" />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="product-content">
                <h2 class="product-title">@Model.ProductTitle</h2>
                <a asp-controller="Home" asp-action="Index" class="product-link">Visit store</a>
                <div class="product-rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                    <span>@* >@Model. *@Rating (21)</span>
                </div>
                <div class="product-price">
                    @* <p class="last-price">Old Price: <span>@Model.OldPrice</span></p> *@
                    @* <p class="new-price">New Price: <span>@Model.NewPrice (5% Off)</span></p> *@

                    <p class="new-price">Price: <span>@Model.ProductPrice</span></p>
                </div>
                <div class="product-detail">

                    <ul>
                        <li>Kategori: <span>@Model.Category.ParentCategoryName</span></li>
                        <li>Alt Kategori: <span>@Model.Category.ParentCategoryTag</span></li>
                        @* <li>Shipping Area: <span>@Model.ShippingArea</span></li>
                        <li>Shipping Fee: <span>@Model.ShippingFee</span></li> *@
                    </ul> <h2>About this item:</h2>
                    <p>@Model.ProductDescription</p>
                </div>
                <div class="purchase-info">
                    @* <input type="number" min="1" value="1"> *@
                    <button type="button" class="btn">Add to Cart <i class="fas fa-shopping-cart"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Container End -->
