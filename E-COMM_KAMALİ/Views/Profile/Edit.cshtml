@model ECOMM.Core.ViewModels.EditProfileViewModel

@{
    ViewData["Title"] = "Profil Düzenle";
}

<h2>Profil Bilgilerini Düzenle</h2>

<!-- Profil düzenleme formu -->
<form id="editProfileForm">
    <div class="form-group">
        <label for="UserName">Kullanıcı Adı</label>
        <input type="text" class="form-control" id="UserName" name="UserName" value="@Model.UserName" />
    </div>
    <div class="form-group">
        <label for="Email">E-posta</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label for="FullName">Ad Soyad</label>
        <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.FullName" />
    </div>
    <button type="submit" class="btn btn-primary">Profil Bilgilerini Güncelle</button>
</form>

<!-- Başarı mesajı -->
<div id="successMessage" style="display: none;">
    <div class="alert alert-success">
        Profil başarıyla güncellendi!
    </div>
</div>

<!-- Hata mesajı -->
<div id="errorMessage" style="display: none;">
    <div class="alert alert-danger">
        Profil güncellenirken bir hata oluştu.
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#editProfileForm").submit(function (event) {
                event.preventDefault(); // Formun normal submit olmasını engelle

                // Form verilerini topla
                var formData = {
                    UserName: $("#UserName").val(),
                    Email: $("#Email").val(),
                    FullName: $("#FullName").val(),
                };

                // AJAX ile veriyi gönder
                $.ajax({
                    url: '@Url.Action("Edit", "Profile")', // Controller ve action URL
                    method: 'POST', // POST isteği
                    data: formData, // Form verisi
                    success: function (response) {
                        if (response.success) {
                            // Başarı mesajını göster
                            $("#successMessage").show();
                            $("#errorMessage").hide();
                        } else {
                            // Hata mesajını göster
                            $("#errorMessage").show();
                            $("#successMessage").hide();
                        }
                    },
                    error: function () {
                        // AJAX hata durumunda
                        $("#errorMessage").show();
                        $("#successMessage").hide();
                    }
                });
            });
        });
    </script>
}

