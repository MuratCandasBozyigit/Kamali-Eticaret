@model IEnumerable<ECOMM.Core.Models.SubCategory>

@{
    ViewData["Title"] = "Alt Kategoriler";
}
<link rel="stylesheet" href="~/css/Mağaza/AltKategoriler.css" />
<h2>Alt Kategoriler</h2>

@if (Model != null && Model.Any())
{
    <div class="subcategory-container">
        @foreach (var subCategory in Model)
        {
            <div class="subcategory-card">
                <h4>@subCategory.SubCategoryName</h4>
            </div>
        }
    </div>
}
else
{
    <p>Bu kategoride alt kategori bulunmamaktadır.</p>
}

