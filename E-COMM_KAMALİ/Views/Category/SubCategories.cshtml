@model IEnumerable<ECOMM.Core.Models.SubCategory>

@{
    ViewData["Title"] = "Alt Kategoriler";
}
<link rel="stylesheet" href="~/css/Mağaza/AltKategoriler.css" />

<h1 style="text-align: center;">Alt Kategoriler</h1>

@if (Model != null && Model.Any())
{
    <div class="subcategory-container">
        @foreach (var subCategory in Model)
        {
            <div class="subcategory-card">
                <a asp-controller="Category" asp-action="Products" asp-route-subCategoryId="@subCategory.Id" style="text-decoration: none; color: inherit;">
                    <h4>@subCategory.SubCategoryName</h4>
                    <p>Ürün sayısı: @subCategory.ProductCount</p>
                </a>
            </div>
        }
    </div>
}
else
{
    <p class="no-subcategories">Bu kategoride alt kategori bulunmamaktadır.</p>
}
