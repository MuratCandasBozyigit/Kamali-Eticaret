@model ECOMM.Core.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<form asp-action="PlaceOrder" method="post">
    <div class="cart-summary">
        <h4>Sepet Özeti</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Fiyat</th>
                    <th>Miktar</th>
                    <th>Toplam</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Price * item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>

        <p><strong>Toplam Tutar: </strong>@Model.TotalAmount</p>
    </div>

    <h3>Ödeme Bilgileri</h3>
    <div class="form-group">
        <label for="Address">Adres:</label>
        <input type="text" class="form-control" id="Address" name="Address" required />
    </div>

    <div class="form-group">
        <label for="PaymentMethod">Ödeme Yöntemi:</label>
        <select class="form-control" id="PaymentMethod" name="PaymentMethod" required>
            <option value="Kredi Kartı">Kredi Kartı</option>
            <option value="Paypal">Paypal</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Siparişi Tamamla</button>
</form>
