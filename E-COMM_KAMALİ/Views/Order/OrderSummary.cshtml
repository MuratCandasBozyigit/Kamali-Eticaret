@model ECOMM.Core.ViewModels.OrderSummaryViewModel

@{
    ViewData["Title"] = "Sipariş Özeti";
}

<section class="pb-4">
    <div class="border rounded-5">
        <section class="w-100 px-3 py-5">
            <div class="row d-flex justify-content-center">
                <div class="col-xl-11">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="fw-normal mb-0">Sipariş Özeti</h3>
                    </div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    <div class="card mb-4">
                        <div class="card-body p-4">
                            <h5 class="mb-0">Sipariş Numarası: @Model.OrderId</h5>
                            <p class="text-muted">Sipariş Tarihi: @Model.OrderDate.ToString("dd/MM/yyyy")</p>
                            <p><strong>Toplam Tutar: </strong>@Model.Total.ToString("C")</p>
                            <p><strong>Ödeme Yöntemi: </strong>@Model.PaymentMethod</p>
                            <p><strong>Adres: </strong>@Model.ShippingAddress</p>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body p-4">
                            <h5 class="mb-4">Sipariş Detayları</h5>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Ürün Adı</th>
                                        <th>Miktar</th>
                                        <th>Fiyat</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Price.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-success btn-lg">Ana Sayfaya Dön</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
