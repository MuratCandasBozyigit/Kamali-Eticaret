@model YourNamespace.ViewModels.ProductEditViewModel

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" />
    <div>
        <label asp-for="ProductTitle"></label>
        <input asp-for="ProductTitle" />
    </div>
    <div>
        <label asp-for="ProductDescription"></label>
        <textarea asp-for="ProductDescription"></textarea>
    </div>
    <div>
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" />
    </div>
    <div>
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
    </div>
    <div>
        <label>Image:</label>
        <input type="file" name="image" />
    </div>
    <button type="submit">Kaydet</button>
</form>
