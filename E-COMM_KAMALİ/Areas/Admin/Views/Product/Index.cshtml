@model ECOMM.Web.Areas.Admin.Controllers.ProductController.HomeViewModel

@{
    ViewData["Title"] = "Ürün Listesi";
}

<h2>Ürün Listesi</h2>


<div class="mt-4" style="text-align:right;">
    <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary ti-plus">Ekle</a>
</div>

<div class="card bg-light text-dark mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><box-icon name="box" color="dark" size="sm" animation="tada"></box-icon> Ürünler</h5>
    </div>
    <div class="card-body">
        <table id="productTable" class="table  table-hover">
            <thead>
                <tr>
                    <th>Resim</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Fiyat</th>
                    <th>Kategori</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr id="product-@product.Id">
                        <td>
                            <img src="@Url.Content(product.ImagePath ?? "~/images/default.jpg")" alt="Ürün Resmi" width="50">
                        </td>
                        <td>@product.ProductTitle</td>
                        <td>@product.ProductDescription</td>
                        <td>@product.ProductPrice.ToString("C")</td>
                        <td>@product.Category?.ParentCategoryName</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <button class="btn btn-sm btn-danger deleteProduct" data-id="@product.Id">Sil</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Css {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#productTable').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.11.5/i18n/Turkish.json"
                },
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                lengthChange: true
            });

          
          

            // Ürün silme
            $('#productTable').on('click', '.deleteProduct', function () {
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu ürün kalıcı olarak silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "DELETE",
                            url: "/Admin/Product/Delete/" + id,
                            success: function () {
                                $('#product-' + id).remove();
                                Swal.fire('Silindi!', 'Ürün başarıyla silindi.', 'success');
                            },
                            error: function () {
                                Swal.fire('Hata', 'Ürün silinirken bir sorun oluştu.', 'error');
                            }
                        });
                    }
                });
            });
        });
    </script>
}
