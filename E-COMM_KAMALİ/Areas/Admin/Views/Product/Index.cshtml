@model ECOMM.Core.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Ürün Listesi";
}

<h2>Ürün Listesi</h2>

<div class="mt-4" style="text-align:right;">
    <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary ti-plus">Ekle</a>
</div>

<div class="card bg-light text-dark mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><box-icon name="box" color="dark" size="sm" animation="tada"></box-icon> Ürünler</h5>
    </div>
    <div class="card-body">
        <table id="tblProducts" class="table table-hover">
            <thead>
                <tr>
                    <th>Resim</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Fiyat</th>
                    <th>Kategori</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <!-- DataTables AJAX ile verileri buraya yükleyecek -->
            </tbody>
        </table>
    </div>
</div>

@section Css {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            $('#tblProducts').DataTable({
                serverSide: true,
                processing: true,
                ajax: {
                    url: '/Admin/Product/GetAll',
                    type: 'GET',
                    data: function (d) {
                        // Sayfa numarasını ayarla
                        d.page = Math.ceil(d.start / d.length) + 1;
                    }
                },
                columns: [
                    {
                        data: 'imagePath', render: function (data) {
                            return '<img src="' + data + '" alt="Ürün Resmi" width="50">';
                        }
                    },
                    { data: 'productTitle' },
                    { data: 'productDescription' },
                    {
                        data: 'productPrice', render: function (data) {
                            return data.toLocaleString('tr-TR', { style: 'currency', currency: 'TRY' });
                        }
                    },
                    { data: 'category.parentCategoryName' },
                    {
                        data: 'id', render: function (data) {
                            return '<a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="' + data + '" class=" btn btn-sm btn-warning">Düzenle</a>' +
                                '<button class="btn btn-danger deleteProduct" data-id="' + data + '">Sil</button>';
                        }
                    }
                ],
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json"
                },
                pageLength: 10, // Varsayılan sayfa boyutu
                lengthMenu: [10, 25, 50, 100], // Kullanıcıya sunulacak seçenekler
                order: [[1, "asc"]], // Varsayılan sıralama
                responsive: true // Cihazdan bağımsız görünüm
            });
            // Silme butonuna tıklandığında AJAX ile silme işlemi
            $('#tblProducts').on('click', '.deleteProduct', function () {
                var id = $(this).data('id');

                // Swal ile onay penceresi
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu Ürün kalıcı olarak silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // AJAX ile silme işlemi
                        $.ajax({
                            type: "DELETE",
                            url: "/Admin/Product/DeleteAsync/" + id,
                            success: function () {
                                $('#tblProducts').DataTable().ajax.reload();
                                Swal.fire('Silindi!', 'Ürün başarıyla silindi.', 'success');
                            },
                            error: function () {
                                Swal.fire('Hata', 'Ürün silinirken bir sorun oluştu.', 'error');
                            }
                        });
                    }
                });
            });
        });
    </script>
}