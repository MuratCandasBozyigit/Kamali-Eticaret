@model ECOMM.Web.Areas.Admin.Controllers.ProductController.HomeViewModel

<h2>Ürün Listesi</h2>
<div class="mt-4" style="text-align:right;font-size:45px;">
    <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary">Ekle</a>
</div>

<div class="container">
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@Url.Content(product.ImagePath ?? "~/images/default.jpg")" alt="Ürün Resmi">
                    <input type="hidden" id="productId" value="@product.Id" />
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductTitle</h5>
                        <p class="card-text">@product.ProductDescription</p>
                        <p class="card-text">Fiyat: @product.ProductPrice.ToString("C")</p>
                        <p class="card-text">Kategori: @product.Category?.ParentCategoryName</p>
                    </div>
                    <div class="mb-3" style="text-align:right; margin-right:10px;">
                        <a href="@Url.Action("Edit", "Product", new { area = "Admin", id = product.Id })" class="btn btn-sm btn-warning">Düzenle</a>
                        <button class="btn btn-sm btn-danger deleteCategory" data-id="@product.Id">Sil</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Silme butonu işlemi
            $('.deleteCategory').on('click', function () {
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu ürün kalıcı olarak silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "DELETE",
                            url: "/Admin/Product/Delete/" + id,
                            success: function () {
                                location.reload(); // Sayfayı yenileyerek silme işlemini göster
                                Swal.fire('Silindi!', 'Ürün başarıyla silindi.', 'success');
                            },
                            error: function () {
                                Swal.fire('Hata', 'Ürün silinirken bir sorun oluştu.', 'error');
                            }
                        });
                    }
                });
            });
        });
    </script>
}
