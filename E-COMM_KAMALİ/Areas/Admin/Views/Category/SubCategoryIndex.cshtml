@model IEnumerable<ECOMM.Core.ViewModels.SubCategoryViewModel>
@using ECOMM.Core.Models
@{
    ViewData["Title"] = "Alt Kategori Ekle";
}

<h2>Alt Kategori Listesi</h2>

<div class="modal fade" id="modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog" aria-labelledby="modAnaitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modAnaitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <input type="hidden" id="categoryId" />
            <div class="modal-body">
                <div class="mb-3">
                    <label for="subCategoryName" class="form-label">Alt Kategori Adı:</label>
                    <input type="text" id="subCategoryName" placeholder="Lütfen Alt Kategori Adı giriniz" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="modalCategoryId" class="form-label">Ana Kategori Seç</label>
                    <select class="form-select" id="modalCategoryId" required>
                        <option value="">Bir kategori seçin</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id" data-category-name="@category.ParentCategoryName">
                                @category.ParentCategoryName
                            </option>
                        }
                    </select>
                </div>
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" id="btnSave" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<div class="card bg-light text-dark">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><box-icon name="category" color="dark" size="sm" animation="tada"></box-icon> Ana Kategorilerim</h5>
        <button id="btnAdd" class="btn btn-outline-primary">+ Yeni Ana Kategori Ekle</button>
    </div>
    <div class="card-body">
        <table id="tblCategories" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Alt Kategori Adı</th>
                    <th>Ana Kategori Adı</th>
                   @*  <th>Açıklama</th> *@
                    <th>İşlemler</th>
                </tr>
            </thead>    
            <tbody>
              @*   @foreach (var subCategory in Model)
                {
                    <tr>
                        <td>@subCategory.SubCategoryName</td>
                        <td>@subCategory.CategoryName</td>
                    </tr>
                } *@

           @*      @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center">Henüz alt kategori eklenmemiş.</td>
                    </tr>
                } *@
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            function resetForm() {
                $('#subCategoryId').val("");
                $('#subCategoryName').val("");
                $('#categoryName').val("");
                $('#.text-danger').hide();
            }

            var table = $('#tblSubCategories').DataTable({
                ajax: {
                    url: 'Admin/Category/GetAllSubCategoriesAsync',
                    dataSrc: '',
                    error: function (xhr, error, thrown) {
                        console.error('Ajax Hatası:', error, thrown);
                        Swal.fire('Hata', 'Kategoriler yüklenirken bir sorun oluştu.', 'error');
                    }
                },
                columns: [
                    { data: 'subCategoryName', title: 'Alt Kategori Adı' },
                    { data: 'categoryName', title: 'Ana Kategori Adı' },
                    {
                        data: null,
                        title: 'İşlemler',
                        render: function (data, type, row) {
                            return `
                            <a href="#" class="btn btn-sm btn-warning editSubCategory" data-id="${row.id}">Düzenle</a>
                            <a href="#" class="btn btn-sm btn-danger deleteSubCategory" data-id="${row.id}">Sil</a>
                        `;
                        }
                    }
                ]
            });
           
         
            $('#btnAdd').click(function () {
                $('#modAnaitle').text('Yeni Ana Kategori Ekle');
                $('#btnSave').text('Ekle');
                resetForm();
                $('#modal').modal('show');
            });

            $('#tblSubCategories').on('click', 'editSubCategory'function () {
                var id = $(this).data('id');
                $.ajax({
                    url: "/Admin/Category/UpdateSubCategory" + id,
                    success: function (res) {
                        $('#subCategoryName').val(res.subCategoryName);
                        $('#categoryName').val(res.categoryName);
                        $('#categoryId').val(res.id);
                    },
                    error: function () {
                        Swal.fire('Hata', 'Kategori verisi yüklenirken bir sorun oluştu.', 'error');
                    }

                });
                $('#modAnaitle').text('Ana Kategori Düzenle');
                $('#btnSave').text('Güncelle');
                $('#modal').modal('show');
            });
            // Kategori silme
            $('#tblCategories').on('click', '.deleteSubCategory', function () {
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu kategori kalıcı olarak silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "DELETE",
                            url: "/Admin/Category/DeleteSubCategory/" + id,
                            success: function () {
                                table.ajax.reload();
                                Swal.fire('Silindi!', 'Alt kategori başarıyla silindi.', 'success');
                            },
                            error: function () {
                                Swal.fire('Hata', 'Alt kategori silinirken bir sorun oluştu.', 'error');
                            }
                        });
                    }
                });
            });
            // Kayıt işlemi
            $('#btnSave').click(function () {
                var category = {
                    id: $('#categoryId').val() === '' ? 0 : parseInt($('#categoryId').val()),
                    parentCategoryName: $('#parentCategoryName').val(),
                    parentCategoryTag: $('#parentCategoryTag').val(),
                    parentCategoryDescription: $('#parentCategoryDescription').val()
                };

                let isValid = true;

                if (!category.parentCategoryName) {
                    $('#parentCategoryName-error').show();
                    isValid = false;
                } else {
                    $('#parentCategoryName-error').hide();
                }

                if (!category.parentCategoryDescription) {
                    $('#parentCategoryDescription-error').show();
                    isValid = false;
                } else {
                    $('#parentCategoryDescription-error').hide();
                }

                if (!isValid) {
                    return;
                }

                var method = category.id === 0 ? "POST" : "PUT";
                var url = category.id === 0 ? "/Admin/Category/AddAsync" : "/Admin/Category/UpdateAsync";

                $.ajax({
                    type: method,
                    url: url,
                    contentType: "application/json",
                    data: JSON.stringify(category),
                    success: function () {
                        $('#modal').modal('hide');
                        table.ajax.reload();
                        Swal.fire('Başarılı!', 'Ana kategori başarıyla kaydedildi.', 'success');
                    },
                    error: function () {
                        Swal.fire('Hata', 'Ana kategori kaydedilirken bir sorun oluştu.', 'error');
                    }
                });
            });
        });
    </script>
}












