@model IEnumerable<ECOMM.Core.ViewModels.SubCategoryViewModel>

@{
    ViewData["Title"] = "Alt Kategori Ekle";
}
<div class="container mt-4">
    <h2>Alt Kategori Listesi</h2>

    <!-- Ekle Butonu -->
    <button class="btn btn-outline-primary mb-3" id="openModal">+ Yeni Alt Kategori Ekle</button>

    <!-- DataTable -->
    <table id="subCategoryTable" class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Alt Kategori Adı</th>
                <th>Ana Kategori Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subCategory in Model)
            {
                <tr>
                    <td>@subCategory.SubCategoryName</td>
                    <td>@subCategory.CategoryName</td>
                    <td>
                        <button class="btn btn-warning btn-sm editSubCategory" data-id="@subCategory.Id">Düzenle</button>
                        <button class="btn btn-danger btn-sm deleteSubCategory" data-id="@subCategory.Id">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="subCategoryModal" tabindex="-1" aria-labelledby="subCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="subCategoryModalLabel">Alt Kategori Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="subCategoryForm">
                    <input type="hidden" id="subCategoryId" />
                    <div class="mb-3">
                        <label for="subCategoryName" class="form-label">Alt Kategori Adı</label>
                        <input type="text" class="form-control" id="subCategoryName" placeholder="Alt Kategori Adı" required />
                    </div>
                    <div class="mb-3">
                        <label for="parentCategoryId" class="form-label">Ana Kategori Seç</label>
                        <select class="form-select" id="parentCategoryId" required>
                            <option value="">Bir kategori seçin</option>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.Id">@category.ParentCategoryName</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Kütüphaneler -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        // DataTable'ı başlat ve beyaz tema uygula
        $('#subCategoryTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json"
            },
            "pagingType": "simple_numbers",
            "dom": '<"top"f>rt<"bottom"lp><"clear">',
            "autoWidth": false,
            "columnDefs": [{
                "targets": "_all",
                "className": "text-center"
            }]
        });

        // Modal açma butonuna tıklama olayı
        $('#openModal').on('click', function () {
            $('#subCategoryModal').modal('show');
        });

        // Form gönderim işlemi
        $('#subCategoryForm').submit(function (e) {
            e.preventDefault();

            const subCategory = {
                SubCategoryName: $('#subCategoryName').val(),
                CategoryId: $('#parentCategoryId').val(),
            };

            $.ajax({
                type: 'POST',
                url: '/SubCategory/AddSubCategory',
                contentType: 'application/json',
                data: JSON.stringify(subCategory),
                success: function () {
                    Swal.fire('Başarılı!', 'Alt kategori başarıyla kaydedildi.', 'success');
                    $('#subCategoryModal').modal('hide');
                    location.reload();
                },
                error: function (xhr) {
                    Swal.fire('Hata!', 'Bir hata oluştu: ' + xhr.responseText, 'error');
                }
            });
        });
    });
</script>
